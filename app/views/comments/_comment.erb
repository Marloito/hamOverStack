<% unless comments.length == 0 %>
<% comments.each do |comment| %>
<div class="comment-div">
  <p id="comment-body"> <%= comment.comment_body %> </p>
  <p id ='comment-author'> <%= User.find(comment.user_id).full_name %> </p>
</div>
<% end %>
<% end %>
<% unless session[:user_id].nil? %>
  <%= erb(:'/comments/_new', :local => {comment_type: "Question"}) %>
<% end %>
